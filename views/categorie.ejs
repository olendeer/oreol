<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/categorie.css">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/footer.css">
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('parts/header')%>
    <section class="<%=(!data.filter) ? 'no-filter' : 'filter'%>">
        <div class="filter-title">Сортировка:</div>
        <div class="sort-of submenu-btn"><span>По популярности</span>
            <img src="img/arrow.svg" alt="">
            <div class="menu-list sort-list">
                <div class="menu-list-item sort-list-item new-submenu-item">По популярности</div>
                <div class="menu-list-item sort-list-item new-submenu-item">По цене</div>
            </div>
        </div>
        <div class="active-filters">
        </div>
        <%for(let i = 0; i < data.filterData.length; i ++){%>
            <div class="filter-block">
                <div class="filter-title"><%=data.filterData[i].name%></div>
                <%for(let j = 0; j < data.filterData[i].fields.length; j++){%>
                    <div class="checkbox-item">
                        <div class="checkbox"></div>
                        <div class="label"><%=data.filterData[i].fields[j]%></div>
                    </div>
                <%}%>
            </div>
        <%}%>
    </section>
    <section class="breadcrumbs <%=(data.filter) ? 'breadcrumbs-filter' : ''%>">
        <a href="/" class="prev-page">Главная</a>
        <span class="prev-page-line"></span>
        <a href="" class="current-page"><%=data.page%></a>
    </section>
    <%if(data.calculator){%>
        <section class="calculator">
            <div class="wrap-calculator <%=(data.calculatorData.last) ? 'calculator-blue' : ''%>">
                <span class="calculator-title"><%=data.calculatorData.title%></span>
                <a href="<%=data.calculatorData.link%>">
                    <span><%=data.calculatorData.button%></span>
                    <svg width="22" height="5" viewBox="0 0 22 5" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0 2.5H20" stroke="#1235C4" stroke-linejoin="round"/>
                        <path d="M22 2.5L18.25 4.66506L18.25 0.334936L22 2.5Z" fill="#1235C4"/>
                    </svg>
                </a>
            </div>
        </section>
    <%}%>
    <section class="yes-filter <%= (data.countItem <= 12) ? 'no-pagination' : 'pagination'%> <%=(!data.filter) ? 'padding-none' : ''%>" <%=(data.calculator) ? 'style=margin-top:30px' : ''%>>
        <div class="filter-items">
            <%for(let i = 0; i < 12; i ++){%>
                <div class="preview-item">
                    <div class="wrap-photo">
                        <div class="sale">Акция</div>
                        <img src="../img/cat-test.png" alt="">
                    </div>
                    <h3>Шлакоблок стеновой 390*190*188</h3>
                    <div class="price-info">
                        <span class="item-price">16,90 грн</span>
                        <div class="item-count">за единицу</div>
                    </div>
                    <div class="item-rating">
                        <span class="rating-count">4,7</span>
                        <div class="star-rating">
                            <svg width="16" height="15" viewBox="0 0 16 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 0L9.79611 5.52786H15.6085L10.9062 8.94427L12.7023 14.4721L8 11.0557L3.29772 14.4721L5.09383 8.94427L0.391548 5.52786H6.20389L8 0Z" fill="#F1F1F1"/>
                            </svg>
                            <svg width="16" height="15" viewBox="0 0 16 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 0L9.79611 5.52786H15.6085L10.9062 8.94427L12.7023 14.4721L8 11.0557L3.29772 14.4721L5.09383 8.94427L0.391548 5.52786H6.20389L8 0Z" fill="#F1F1F1"/>
                            </svg>
                            <svg width="16" height="15" viewBox="0 0 16 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 0L9.79611 5.52786H15.6085L10.9062 8.94427L12.7023 14.4721L8 11.0557L3.29772 14.4721L5.09383 8.94427L0.391548 5.52786H6.20389L8 0Z" fill="#F1F1F1"/>
                            </svg>
                            <svg width="16" height="15" viewBox="0 0 16 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8 0L9.79611 5.52786H15.6085L10.9062 8.94427L12.7023 14.4721L8 11.0557L3.29772 14.4721L5.09383 8.94427L0.391548 5.52786H6.20389L8 0Z" fill="#F1F1F1"/>
                            </svg>
                        </div>
                    </div>
                    <a href="/<%=data.categorie%>/product">
                        <span>Подробнее</span>
                        <svg width="22" height="5" viewBox="0 0 22 5" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0 2.5H20" stroke="#1235C4" stroke-linejoin="round"/>
                            <path d="M22 2.5L18.25 4.66506L18.25 0.334936L22 2.5Z" fill="#1235C4"/>
                        </svg>
                    </a>
                </div>
            <%}%>
        </div>
        <%if(data.countItem > 12){%>
            <div class="filter-items-navigation">
                <div class="prev-page nav-btn">
                    <svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 5L5 1L1 5" stroke="#1235C4" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>Предыдущая</span>
                </div>
                <div class="pagination">
                    <%if(data.countPage <= 4){%>
                        <span class="num-page active-num-page">1</span>
                        <span class="num-page">2</span>
                        <span class="num-page">3</span>
                        <span class="num-page">4</span>
                    <%}else if(data.numberPage == 1 || data.numberPage == 2 || data.numberPage == data.countPage || data.numberPage == data.countPage - 1){%>
                        <span class="num-page active-num-page">1</span>
                        <span class="num-page">2</span>
                        <span class="num-page dots">...</span>
                        <span class="num-page"><%= data.countPage - 1%></span>
                        <span class="num-page"><%= data.countPage%></span>
                    <%}else{%>
                        <span class="num-page">1</span>
                        <span class="num-page dots">...</span>
                        <span class="num-page"><%= data.numberPage - 1%></span>
                        <span class="num-page active-num-page"><%= data.numberPage%></span>
                        <span class="num-page"><%= data.numberPage + 1%></span>
                        <span class="num-page dots">...</span>
                        <span class="num-page"><%= data.countPage%></span>
                    <%}%>
                </div>
                <div class="next-page nav-btn">
                    <span>Следующая</span>
                    <svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 5L5 1L1 5" stroke="#1235C4" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
            </div>
        <%}%>
    </section>
    <section class="description">
        <div class="wrap-description">
            <div class="description-header"><%=data.page%></div>
            <div class="description-text"><%=data.description%></div>
        </div>
    </section>
    <%- include('parts/footer')%>
    <script src="js/modal.js"></script>
    <script src="js/script.js"></script>
</body>
</html>